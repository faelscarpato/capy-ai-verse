{
  "name": "CapyUniverse - AI Powered Tools",
  "short_name": "CapyUniverse",
  "description": "Plataforma mobile-first de ferramentas de IA generativa integrada com Google Gemini. Produtividade, aprendizado e criatividade na palma da sua m√£o.",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#6750A4",
  "background_color": "#1E1B4B",
  "scope": "/",
  "categories": ["productivity", "education", "utilities", "ai"],
  
  "icons": [
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "512x512", 
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "data:image/svg+xml;base64,",
      "sizes": "192x192",
      "type": "image/svg+xml", 
      "purpose": "maskable"
    }
  ],

  "shortcuts": [
    {
      "name": "CapyResumo",
      "short_name": "Resumir",
      "description": "Resumir texto rapidamente",
      "url": "/?action=resume",
      "icons": [
        {
          "src": "data:image/svg+xml;base64,",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "CapyExplica",
      "short_name": "Explicar", 
      "description": "Explicar conceitos",
      "url": "/?action=explain",
      "icons": [
        {
          "src": "data:image/svg+xml;base64,",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],

  "related_applications": [],
  "prefer_related_applications": false,

  "display_override": ["window-controls-overlay", "standalone"],
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },

  "edge_side_panel": {
    "preferred_width": 400
  },

  "protocol_handlers": [
    {
      "protocol": "web+capyuniverse",
      "url": "/?action=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/?action=process-text",
      "accept": {
        "text/plain": [".txt"],
        "text/markdown": [".md"]
      }
    }
  ]
}